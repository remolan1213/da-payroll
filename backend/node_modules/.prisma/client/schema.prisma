// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Company {
  company_id    Int          @id @default(autoincrement())
  company_name  String
  departments   Department[]
  employees     Employee[]
}

model Department {
  department_id   Int        @id @default(autoincrement())
  department_name String
  company_id      Int
  company         Company    @relation(fields: [company_id], references: [company_id])
}

model Employee {
  employee_id      String     @id
  lastName         String
  firstName        String
  middleName       String?
  company_id       Int?
  start_train_date DateTime
  start_income_date DateTime
  start_10k_date   DateTime
  worker_type      String
  wage_rate        Float
  rate_type        String
  company          Company?   @relation(fields: [company_id], references: [company_id])
  leaves           Leave[]
  payrolls         Payroll[]
  payroll_temps    PayrollTemp[]
}

model Leave {
  leave_id     Int      @id @default(autoincrement())
  employee_id  String
  start_leave  DateTime?
  end_leave    DateTime?
  total_days   Int?
  employee     Employee @relation(fields: [employee_id], references: [employee_id])
}

model Payroll {
  payroll_id    Int             @id @default(autoincrement())
  employee_id   String
  payroll_range DateTime
  payroll_date  DateTime
  employee      Employee        @relation(fields: [employee_id], references: [employee_id])
  payamounts    PayrollAmount[]
}

model PayrollAmount {
  payamount_id     Int       @id @default(autoincrement())
  payroll_id       Int
  gross_amount     Float
  work_share       Float?
  conversion_rate  Float?
  payroll          Payroll   @relation(fields: [payroll_id], references: [payroll_id])
}

model PayrollTemp {
  payroll_id    Int             @id @default(autoincrement())
  employee_id   String
  payroll_range DateTime
  payroll_date  DateTime
  employee      Employee        @relation(fields: [employee_id], references: [employee_id])
  payamounts    PayrollAmountTemp[]
}

model PayrollAmountTemp {
  payamount_id     Int           @id @default(autoincrement())
  payroll_id       Int
  gross_amount     Float
  work_share       Float?
  conversion_rate  Float?
  payroll_temp     PayrollTemp   @relation(fields: [payroll_id], references: [payroll_id])
}
